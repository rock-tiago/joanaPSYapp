<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.joana.ui.controllers.PatientController">

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <!-- List of patients -->
            <Label text="Patients List"/>
            <TableView fx:id="patientTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                </columns>
            </TableView>

            <Separator/>

            <!-- New Patient Details -->
            <Label text="Add / Edit Patient:"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints minWidth="200"/>
                </columnConstraints>

                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Notes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextArea fx:id="notes" GridPane.rowIndex="3" GridPane.columnIndex="1"
                          prefRowCount="3" wrapText="true"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Save" onAction="#onSavePatient"/>
                <Button text="Delete" onAction="#onDeletePatient"/>
                <Button text="Cancel" onAction="#onCancel"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
